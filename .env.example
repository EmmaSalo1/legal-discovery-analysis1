# Example environment variables for Legal Discovery Analysis System

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview

# Database
DATABASE_URL=sqlite:///./legal_discovery.db

# Vector Store
CHROMA_PERSIST_DIRECTORY=./data/vector_db

# File Storage
UPLOAD_DIRECTORY=./discovery_sets
TEMP_DIRECTORY=./data/temp_processing
MAX_FILE_SIZE=500000000

# OCR Settings
TESSERACT_PATH=/opt/homebrew/bin/tesseract
OCR_LANGUAGE=eng
OCR_CONFIDENCE_THRESHOLD=60.0

# Audio Processing
WHISPER_MODEL=base
WHISPER_DEVICE=cpu

# Video Processing
MAX_VIDEO_DURATION=7200
VIDEO_FRAME_INTERVAL=30

# Background Processing
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/0

# Logging
LOG_LEVEL=INFO
LOG_FILE=./data/logs/analysis.log
MULTIMEDIA_LOG_FILE=./data/logs/multimedia_processing.log

# M4 Specific Settings
APPLE_SILICON_OPTIMIZED=true
USE_MPS_IF_AVAILABLE=false
CPU_PROCESSING_PREFERRED=true
